            Label:
                text: 'Exposure'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                color: 0.2,0.5,1,1
            Slider:
                id: bl_exp
                min: 100
                max: 200

            Label:
                text: 'Green'
                text_size: self.size
                halign: 'center'
                valign: 'middle'

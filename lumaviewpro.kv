#:kivy 1.0
#: import GLShaderLexer pygments.lexers.GLShaderLexer

<ShaderEditor>:
    viewer: viewer_id
    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 350

            Label:
                text: 'Fragment Shader'
                size_hint_y: None
                height: self.texture_size[1] + 10
            CodeInput:
                text: root.fs
                lexer: GLShaderLexer()
                on_text: root.fs = args[1]

            Label:
                text: 'Vertex Shader'
                size_hint_y: None
                height: self.texture_size[1] + 10
            CodeInput:
                text: root.vs
                lexer: GLShaderLexer()
                on_text: root.vs = args[1]

        BoxLayout:
            orientation: 'vertical'

            ShaderViewer:
                id: viewer_id
                Camera:
                    id: scope
                    play: True
                    index: 0
                    resolution: (1920, 1080)
            ToggleButton:
                text: 'Play'
                state: 'down'
                on_press: scope.play = not scope.play # currently not working becuase 'scope' id was moved into <ShaderEditor? instead of <ImageTab>
                size_hint_y: None
                height: '48dp'
            Button:
                text: 'Capture'
                size_hint_y: None
                height: '48dp'
                on_press: root.capture()

#            canvas:
#                Color:
#                    rgb: 1, 1, 1
#                Rectangle:
#                    size: self.size
#                    pos: self.pos
#                    source: root.source


<MainDisplay>:
    tab_pos: 'top_mid'
    tab_width: (self.size[0] / 5) - 1
    do_default_tab: False
    canvas:
        Color:
            rgba: (.188, .188, .188, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    TabbedPanelItem:
        id: image_tab
        text: 'Live Image'
        ImageTab:

    # moved to make ImageTab on startup
    TabbedPanelItem:
        id: config_tab
        text: 'Configuration'
        ConfigTab:

    TabbedPanelItem:
        id: config_tab
        text: 'Configuration'
        ConfigTab:

    TabbedPanelItem:
        id: motion_tab
        text: 'Motion'
        MotionTab:

    TabbedPanelItem:
        id: protocol_tab
        text: 'Protocol'
        ProtocolTab:

    TabbedPanelItem:
        id: analysis_tab
        text: 'Analysis'
        AnalysisTab:

